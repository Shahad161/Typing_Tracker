<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.typing_tracker.ui.home.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F4F5F9"
        tools:context=".ui.home.HomeFragment">

        <View
            android:id="@+id/top_bar_background"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:elevation="2dp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/typing_tracker"
            android:fontFamily="@font/librecaslontext_regular"
            android:layout_margin="@dimen/margin_normal"
            android:elevation="2dp"
            android:textSize="@dimen/text_large"
            android:textColor="#2330A4"
            app:layout_constraintTop_toTopOf="@+id/top_bar_background"
            app:layout_constraintBottom_toBottomOf="@+id/top_bar_background"
            app:layout_constraintStart_toStartOf="@id/top_bar_background"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/statistics_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFA048"
            android:elevation="2dp"
            android:layout_marginEnd="@dimen/margin_large"
            android:src="@drawable/ic_baseline_statistics_24"
            app:layout_constraintBottom_toBottomOf="@+id/title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/title"
            app:shapeAppearanceOverlay="@style/roundedImage" />

        <Chronometer
            android:id="@+id/count_up_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_bar_background" />

        <TextView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_margin="@dimen/margin_veryLarge"
            android:padding="8dp"
            app:setParagraph="@{viewModel.checkInput}"
            app:layout_constraintTop_toBottomOf="@+id/count_up_timer"
            />

        <EditText
            android:id="@+id/edit"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="@string/type"
            android:padding="@dimen/padding_normal"
            android:inputType="textNoSuggestions"
            android:text="@={viewModel.enterText}"
            android:background="@drawable/shape_edit_text"
            android:layout_margin="@dimen/margin_normal"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>